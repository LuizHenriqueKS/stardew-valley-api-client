{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "console": "integratedTerminal",
      "name": "Launch main",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\src\\main.ts",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Run all tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Run current test",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "${fileBasename}",
        "--runInBand"
      ]
    }
  ]
}